<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".concertinfo">

    <TextView
        android:id="@+id/acarainfotv"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hargainfotv"
        android:layout_width="199dp"
        android:layout_height="57dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acarainfotv" />

    <Button
        android:id="@+id/btnbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:text="Book"
        app:layout_constraintStart_toEndOf="@+id/btntambah"
        app:layout_constraintTop_toBottomOf="@+id/hargainfotv" />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:text="-"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hargainfotv" />

    <Button
        android:id="@+id/btntambah"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="120dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/btnkurang"
        app:layout_constraintTop_toBottomOf="@+id/hargainfotv" />

    <TextView
        android:id="@+id/tvitemcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btntambah"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/btnkurang"
        app:layout_constraintTop_toBottomOf="@+id/hargainfotv" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="158dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toStartOf="@+id/acarainfotv"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_mic_none_24" />

    <TextView
        android:id="@+id/totalharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Total: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>